@model prjbase.Models.Remesa

@{
    ViewData["Category"] = "Remesas";
    ViewData["controller"] = "Remesas";
    ViewData["Title"] = "Editar Remesa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section menu
{
    <partial name="_Menu" />
}

<partial name="_EncabezadoProp" />
<form asp-action="Create">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Nombre" class="control-label"></label>
        <input asp-for="Nombre" class="form-control col-md-6" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Ano" class="control-label"></label>
        <input asp-for="Ano" class="form-control col-md-6" />
        <span asp-validation-for="Ano" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Dias" class="control-label"></label>
        <input asp-for="Dias" type="number" class="form-control col-md-6" />
        <span asp-validation-for="Dias" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdZona" class="control-label"></label>
        <select asp-for="IdZona" class="js-example-basic-single form-control col-md-6" asp-items="ViewBag.IdZona">
            <option value="">Seleccione</option>
        </select>
    </div>
    <input asp-for="Estado" hidden value="True" class="form-control" />
    @*<div class="form-group">
            <label asp-for="Estado" class="control-label"></label>
            <input asp-for="Estado" class="form-control" />
            <span asp-validation-for="Estado" class="text-danger"></span>
        </div>*@
    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
    </div>
</form>


