@model prjbase.Models.Remesa

@{
    ViewData["Category"] = "Remesas";
    ViewData["controller"] = "Remesas";
    ViewData["Title"] = "Editar Remesa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<partial name="_EncabezadoProp" />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Nombre" class="control-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Ano" class="control-label"></label>
        <input asp-for="Ano" class="form-control" />
        <span asp-validation-for="Ano" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Dias" class="control-label"></label>
        <input asp-for="Dias" type="number" class="form-control" />
        <span asp-validation-for="Dias" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdZona" class="control-label"></label>
        <select asp-for="IdZona" class="js-example-basic-single form-control" asp-items="ViewBag.IdZona">
            <option value="">Seleccione una opci&oacute;n</option>
        </select>
        <span asp-validation-for="IdZona" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Estado" class="control-label"></label>
        <select asp-for="Estado" class="js-example-basic-single form-control">
            <option value="">Selecione una opci&oacute;n</option>
            <option value="True">Activo</option>
            <option value="False">Inactivo</option>
        </select>
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
    </div>
</form>


