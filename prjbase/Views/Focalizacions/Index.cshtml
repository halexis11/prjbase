@model IEnumerable<prjbase.Models.Focalizacion>

@{
    ViewData["Title"] = "Mantenimiento de focalización";
    ViewData["controller"] = "Focalizacions";
    ViewData["category"] = "Focalización";
    Layout = "~/Views/Shared/_Consulta.cshtml";
}

<body>

    <partial name="_EncabezadoConsulta" />
    <div class="px-4">
        <table class="table display table-bordered table-striped" id="datatable" style="width:100%">
            <thead>
                <tr>
                    <th></th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Estado)
                    </th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        <secure-content asp-area="" asp-controller=@ViewData["Controller"] asp-action="Edit">
                            <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                        </secure-content>
                        <secure-content asp-area="" asp-controller=@ViewData["Controller"] asp-action="Delete">
                            <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                        </secure-content>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>

                </tr>
                }
            </tbody>
        </table>
</div>
</body>