@model prjbase.Models.WayBill

@{
    ViewData["Category"] = "WayBill";
    ViewData["controller"] = "WayBills";
    ViewData["Title"] = "Crear WayBill";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<partial name="_EncabezadoProp" />
<body>
    <form asp-action="Create">
