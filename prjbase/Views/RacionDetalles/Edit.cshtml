@model prjbase.Models.RacionDetalle

@{
    ViewData["Category"] = "Ración";
    ViewData["controller"] = "Racions";
    ViewData["Title"] = "Editar ración";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["id"] = Model.IdRacion;
}

<partial name="_EncabezadoProp" />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="IdRacion" class="control-label"></label>
        <select asp-for="IdRacion" class="js-example-basic-single form-control" asp-items="ViewBag.IdRacions">
            <option value="">Seleccione una opci&oacute;n</option>
        </select>
        <span asp-validation-for="IdRacion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdProducto" class="control-label"></label>
        <select asp-for="IdProducto" class="js-example-basic-single form-control" asp-items="ViewBag.IdProducto">
            <option value="">Seleccione una opci&oacute;n</option>
        </select>
        <span asp-validation-for="IdProducto" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CantidadGramos" class="control-label"></label>
        <input asp-for="CantidadGramos" class="form-control" />
        <span asp-validation-for="CantidadGramos" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="GUardar" class="btn btn-primary" />
    </div>
</form>


