@model prjbase.Models.Distrito

@{
    ViewData["Category"] = "Distritos";
    ViewData["controller"] = "Distritoes";
    ViewData["Title"] = "Editar Distrito";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<partial name="_EncabezadoProp" />
<form asp-action="Edit">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group col-md-6">
        <label asp-for="IdDepartamento" class="control-label"></label>
        <select asp-for="IdDepartamento" class="form-control" asp-items="ViewBag.IdDepartamento">
            <option value="">Seleccione una opci&oacute;n</option>
        </select>
        <span asp-validation-for="IdDepartamento" class="text-danger"></span>
    </div>
    <div class="form-group col-md-6">
        <label asp-for="Nombre" class="control-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group col-md-6">
        <label asp-for="Descripcion" class="control-label"></label>
        <input asp-for="Descripcion" class="form-control col-md-6" />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class="form-group col-md-6">
        <label asp-for="Estado" class="control-label"></label>
        <select asp-for="Estado" class="js-example-basic-single form-control">
            <option value="">Estado</option>
            <option value="True">Activo</option>
            <option value="False">Inactivo</option>
        </select>
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
    </div>
</form>


